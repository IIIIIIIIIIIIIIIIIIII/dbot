@ScriptManifest(author = "Xaklon", category = Category.MISC, description = "Buys, sells, profit$", name = "FLIPPER 5.0", version = 4.0)
public class Main extends AbstractScript {
	GameObject furnace;
	GameObject sink;
	GameObject bank;
	NPC foreman;
	/*
	 * 0 is smelting
	 * 1 is running 
	 * 2 is water bucket 
	 * 3 is waiting for fix
	 * 4 is banking
	 * 
	 * 
	 * conveyor belt id = 9100 
	 * tile = 1943, 4967 
	 * put-ore-on
	 * fill-bucket
	 * 
	 * SINK: 9143
	 * foreman:2923
	 * BANKCHEST: 26707
	 * bankdeposit: 6948
	 */
	
	
	public void onStart(){
		furnace = getGameObjects().closest(9100);
		sink = getGameObjects().closest(9143);
		bank = getGameObjects().closest(26707);
		foreman = getNpcs().closest(2923);
		if(foreman!=null){
			foreman.interact("Pay");
			sleep(1300,2300);
			getMouse().move(new Point(257, 403));
		}
	}
	@Override
	public int onLoop() {

		
		return 0;
	}
	
	public void Bank(){
		if (bank != null){
			sleep(1000,2000);
			bank.interact("Use");
			sleep(1000,2000);
			getBank().withdrawAll("Coins");
			sleep(1000,2000);
			getBank().withdraw(440, 1);
			sleep(1000,2000);
			getBank().withdrawAll(440);
			sleep(1000,2000);
			getBank().close();

		}
	}
	
	public void Smelt(){
		getCamera().rotateToEntity(furnace);
		if (furnace != null){
			furnace.interact("Put-ore-on");
			
		}
	}
	
	public void runToFurnace(){
		
		
	}
	
	
	
	

}
